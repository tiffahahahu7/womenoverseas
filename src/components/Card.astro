---
interface Props {
  title: string;
  src: ImageMetadata;
  href: string;
}

const { href, title, src } = Astro.props;

import { Image } from "astro:assets";
---

<li class="link-card">
  <a href={href}>
    <Image src={src} alt={title} />
    <div class="card-content">
      <h3 class="card-title">{title}</h3>
      <span class="btn">活动详情</span>
    </div>
  </a>
</li>

<style>
  .link-card {
    list-style: none;
    position: relative;
    /* background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1); */
  }
  .link-card img {
	width: 353px;
	height: 470px;
    border-radius: 8px;
  }
  .link-card .card-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 8px;
    background: var(--accent-gradient);
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    opacity: 0;
    transition: opacity 0.3s ease;
    padding: 36px;
    text-align: start;
    box-sizing: border-box;
  }
  .link-card .card-content .btn {
    min-width: 140px;
    border: 1px solid white;
    border-radius: 8px;
    padding: 12px 24px;
    text-align: center;
  }
  .link-card:is(:hover, :focus-within) .card-content {
    opacity: 1;
  }
  @media(min-width: 768px){
	.link-card img {
	width: 439px;
    height: 585px;
	}
  }
</style>
